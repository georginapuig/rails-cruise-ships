<div class="container pt-4 pb-5">
  <h2>Ships List</h2>
  <div class="cards d-flex">
    <!-- card -->
    <% @ships.each do |ship| %>
      <div class="card-trip mt-4">
        <img src="https://images.unsplash.com/photo-1574314970612-0d2762d7c7a8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80" />
        <div class="card-trip-infos">
          <div>
            <h2>ship.name</h2>
            <p>ship.description</p>
          </div>
          <h2 class="card-trip-pricing">ship.capacity</h2>
        </div>
      </div>
    <% end %>
  </div>
</div>